
<div class="bg-white">
  <div class="mx-10 py-4 px-4 sm:py-24 sm:px-6 lg:max-w-fit
      lg:px-8">
    <div class="flex flex-col justify-between md:flex-row">
      <div
        class="w-full flex flex-col items-center md:flex-row justify-between md:w-full lg:w-5/6
        xl:w-2/3 2xl:w-1/3 2xl:gap-5 text-center md:text-left">
        <h2 class="text-2xl font-bold tracking-tight text-center text-gray-900">Our products</h2>
        <div class="w-full flex flex-col justify-center my-2 sm:w-4/6">
          <p class="my-2 font-light text-center md:text-left text-gray-900"
            id="paginationText">
          </p>
          <div>
            <button type="button" class="btn btn-info btn-sm mx-1"
              id="prevButton" onclick="renderPrev()">Previous
              Page</button>
            <button type="button" class="btn btn-info btn-sm mx-1"
              id="nextButton" onclick="renderNext()">Next
              Page</button>
          </div>
        </div>
      </div>

      <div class="w-full md:w-1/2 lg:w-1/4 flex justify-evenly items-center my-4">
        <p class="mb-0 text-md font-bold text-gray-900">Sort by price:</p>

        <div class="w-1/2">
          <div class="relative">
            <button type="button" class="relative w-full cursor-default
                rounded-md bg-white py-1.5 pl-3 pr-10 text-left text-gray-900
                shadow-sm border border-black ring-1 ring-inset ring-gray-300
                focus:outline-none
                focus:ring-2 focus:ring-indigo-500 sm:text-sm sm:leading-6"
              aria-haspopup="listbox"
              aria-expanded="true" aria-labelledby="listbox-label"
              id="sortSelector" onclick="showSort()">
              <span class="flex items-center">
                <span class="ml-3 block truncate" id="sortLabel">-</span>
              </span>
              <span class="pointer-events-none absolute inset-y-0 right-0
                  ml-3
                  flex items-center pr-2">
                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                  fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 3a.75.75 0 01.55.24l3.25
                      3.5a.75.75 0 11-1.1 1.02L10 4.852 7.3 7.76a.75.75 0
                      01-1.1-1.02l3.25-3.5A.75.75 0 0110 3zm-3.76 9.2a.75.75 0
                      011.06.04l2.7 2.908 2.7-2.908a.75.75 0 111.1 1.02l-3.25
                      3.5a.75.75 0 01-1.1 0l-3.25-3.5a.75.75 0 01.04-1.06z"
                    clip-rule="evenodd"></path>
                </svg>
              </span>
            </button>

            <ul class="absolute z-10 mt-1 max-h-56 w-full overflow-auto
                rounded-md bg-white py-1 pl-0 text-base shadow-lg ring-1
                ring-black ring-opacity-5 focus:outline-none sm:text-sm
                selectComp" tabindex="-1" role="listbox"
              aria-labelledby="listbox-label"
              aria-activedescendant="listbox-option-3" id="sortOptions">

              <li class="text-gray-900 relative cursor-default select-none
                  py-2 pl-3 pr-9" id="listbox-option-0" role="option">
                <div class="flex items-center">
                  <span data-value="asc" class="font-normal ml-3 block
                      truncate">Ascendent</span>
                </div>
              </li>

              <li class="text-gray-900 relative cursor-default select-none
                  py-2 pl-3 pr-9" id="listbox-option-1" role="option">
                <div class="flex items-center">
                  <span data-value="desc" class="font-normal ml-3 block
                      truncate">Descendent</span>
                </div>
              </li>

              <!-- More items... -->
            </ul>
          </div>
        </div>

      </div>
    </div>

    <div class="mt-6 grid gap-y-10 gap-x-6 
        sm:grid-cols-1 
        md:grid-cols-2
        lg:grid-cols-3
        xl:grid-cols-4
        2xl:grid-cols-5" id="productContainer">
    </div>
  </div>
</div>

<div class="relative z-10 modalBg" id="modalBg" role="dialog"
  aria-modal="true">
  <!--
    Background backdrop, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100"
      To: "opacity-0"
  -->
  <div class="fixed inset-0 hidden bg-gray-500 bg-opacity-75
      transition-opacity md:block"></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-stretch justify-center text-center
        md:items-center md:px-2 lg:px-4">
      <!--
        Modal panel, show/hide based on modal state.

        Entering: "ease-out duration-300"
          From: "opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
          To: "opacity-100 translate-y-0 md:scale-100"
        Leaving: "ease-in duration-200"
          From: "opacity-100 translate-y-0 md:scale-100"
          To: "opacity-0 translate-y-4 md:translate-y-0 md:scale-95"
      -->
      <div class="flex w-full transform text-left text-base transition
          md:my-8
          md:max-w-3xl md:px-4 lg:max-w-6xl modalPanel" id="modalPanel">
        <div class="relative flex w-full items-center overflow-hidden
            bg-white
            px-4 pt-14 pb-8 shadow-2xl sm:px-6 sm:pt-8 md:p-6 lg:p-12
            rounded-3xl">
          <button type="button" class="absolute top-4 right-4 text-gray-400
              hover:text-gray-500 sm:top-8 sm:right-6 md:top-6 md:right-6
              lg:top-8 lg:right-8" onclick="hideModal()">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24"
              stroke-width="1.5" stroke="currentColor"
              aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6
                  18L18
                  6M6 6l12 12"></path>
            </svg>
          </button>

          <div class="grid w-full grid-cols-1 items-start gap-y-8 gap-x-6
              sm:grid-cols-12 lg:gap-x-8">
            <div class="aspect-w-2 aspect-h-3 overflow-hidden rounded-lg
                bg-gray-100 sm:col-span-4 lg:col-span-5">
              <img
                src="https://tailwindui.com/img/ecommerce-images/product-quick-preview-02-detail.jpg"
                alt="Two each of gray, white, and black shirts arranged on
                  table." class="object-cover object-center" id="modalImage">
            </div>
            <div class="sm:col-span-8 lg:col-span-7">
              <h2 class="text-2xl font-bold text-gray-900 sm:pr-12"
                id="modalTitle">Basic
                Tee 6-Pack</h2>

              <section aria-labelledby="information-heading" class="mt-2">
                <h3 id="information-heading" class="sr-only">Product
                  information</h3>

                <p class="text-2xl text-gray-900" id="modalPrice">$192</p>
              </section>

              <section aria-labelledby="options-heading" class="mt-4">
                <h3 id="options-heading" class="sr-only">Product
                  options</h3>

                <!-- Description -->
                <div>
                  <h4 class="text-sm font-bold text-gray-900">Description</h4>
                  <p class="text-gray-900" id="modalDescription">This is the
                    description</p>
                </div>

                <!-- Category -->
                <div class="mt-4">
                  <h4 class="text-sm font-bold text-gray-900">Category</h4>
                  <p class="text-gray-900" id="modalCategory">This is the
                    category</p>
                </div>

                <!-- Stock -->
                <div class="mt-4">
                  <h4 class="text-sm font-bold text-gray-900">Stock</h4>
                  <p class="text-gray-900" id="modalStock">This is the
                    stock</p>
                </div>
                {{#if flag}}
                {{#if userflag}}

                <div class="flex flex-row justify-evenly items-start gap-2">
                  <button type="submit" class="mt-6 flex w-5/12
                    items-end justify-center rounded-md
                    border border-transparent bg-indigo-600 py-3
                    px-8 text-base font-medium text-white
                    hover:bg-indigo-700 focus:outline-none
                    focus:ring-2 focus:ring-indigo-500
                    focus:ring-offset-2 disabled:btn-disabled"
                    id="prodActionBtn" data-value="data"
                    onclick="addToCart()" disabled>Add to bag</button>

                  <div class="form-control w-4/12 mt-6">
                    <select class="select text-black bg-transparent 
                      select-primary w-full max-w-xs"
                      onchange="handleQuantity(this)" id="quantitySelect">
                      <option class="text-black" disabled selected>Quantity</option>
                      <option class="text-black">1</option>
                      <option class="text-black">2</option>
                      <option class="text-black">3</option>
                      <option class="text-black">4</option>
                      <option class="text-black">5</option>
                      <option class="text-black">6</option>
                      <option class="text-black">7</option>
                      <option class="text-black">8</option>
                      <option class="text-black">9</option>
                      <option class="text-black">10</option>
                    </select>
                    <label class="label">
                      <span class="text-black label-text-alt">Quantity</span>
                    </label>
                  </div>

                </div>
                {{else}}
                {{#if adminflag}}
                <div class="flex flex-row justify-evenly items-start gap-2">
                  <button type="submit" class="w-1/3 mt-6 flex
                    items-center justify-center rounded-md
                    border border-transparent bg-teal-600 py-2
                    px-2 text-base font-medium text-white
                    hover:bg-teal-600-700 focus:outline-none
                    focus:ring-2 focus:ring-teal-500
                    focus:ring-offset-2" id="prodActionBtn" data-value="data"
                    onclick="editProd()">Edit</button>

                  <button type="submit" class="w-1/3 mt-6 flex
                    items-center justify-center rounded-md
                    border border-transparent bg-red-600 py-2
                    px-2 text-base font-medium text-white
                    hover:bg-red-700 focus:outline-none
                    focus:ring-2 focus:ring-red-500
                    focus:ring-offset-2" id="deleteProdBtn" data-value="data"
                    onclick="showDeleteModal()">Delete</button>
                </div>
                {{else}}
                <div class="flex flex-col"
                  id="modalActionContent">
                </div>
                {{/if}}
                {{/if}}
                {{else}}
                <button type="submit" class="m-auto mt-6 flex w-4/6
                    items-center justify-center rounded-md
                    border border-transparent bg-indigo-600 py-3
                    px-8 text-base font-medium text-white
                    hover:bg-indigo-700 focus:outline-none
                    focus:ring-2 focus:ring-indigo-500
                    focus:ring-offset-2" id="prodActionBtn" data-value="data"
                  onclick="goLogin()">Sign in to buy</button>
                {{/if}}

              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="relative z-10 modalDeleteBg" id="modalDeleteBg"
  aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <!--
    Background backdrop, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100"
      To: "opacity-0"
  -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div
      class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <!--
        Modal panel, show/hide based on modal state.

        Entering: "ease-out duration-300"
          From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          To: "opacity-100 translate-y-0 sm:scale-100"
        Leaving: "ease-in duration-200"
          From: "opacity-100 translate-y-0 sm:scale-100"
          To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      -->
      <div class="modalDeletePanel relative transform overflow-hidden md:my-8
          md:max-w-2xl md:px-4 lg:max-w-4xl rounded-lg bg-white 
          text-left shadow-xl transition-all sm:my-20 sm:w-1/3 sm:max-w-lg"
        id="modalDeletePanel">
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <div
              class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
              <svg class="h-6 w-6 text-red-600" fill="none"
                viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
              </svg>
            </div>
            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 class="text-base font-semibold leading-6 text-gray-900"
                id="modal-title">Delete product</h3>
              <div class="mt-2">
                <p class="text-sm text-black">Are you sure you want to delete
                  this product?</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
          <button type="button" onclick="deleteProd()"
            class="inline-flex w-full justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 sm:ml-3 sm:w-auto">Delete</button>
          <button type="button" onclick="hideDeleteModal()"
            class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/products.js"></script>
