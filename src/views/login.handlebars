<div class="min-h-screen py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div
            class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
        </div>
        <div
            class="heartbeat rounded-md relative px-12 py-16 bg-white shadow-lg 
            sm:rounded-3xl sm:p-20">
            <div class="max-w-md mx-auto px-10">
                <div>
                    <h1 class="text-2xl font-semibold text-gray-700">Sign in</h1>
                </div>
                <div class="divide-y divide-gray-200">
                    <div
                        class="py-6 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                        <form id="loginForm">
                            <div class="relative my-4">
                                <input type="text"
                                    name="email"
                                    id="email" required="true"
                                    class="text-sm peer placeholder-transparent h-10 bg-white w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600"
                                    placeholder="Email address" />
                                <label for="email"
                                    class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Email
                                    Address</label>
                            </div>
                            <div class="relative my-4">
                                <input type="password"
                                    name="password" id="password"
                                    required="true"
                                    class="text-sm peer placeholder-transparent bg-white h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600"
                                    placeholder="Password" />
                                <label for="password"
                                    class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Password</label>
                            </div>

                            <div class="relative flex flex-row gap-5 my-8">
                                <button
                                    class="m-auto btn btn-outline btn-info text-white rounded-md px-2 py-1 capitalize"
                                    id="login" type="button">Submit</button>
                                <button
                                    class="m-auto btn btn-outline btn-error text-white rounded-md px-2 py-1 capitalize"
                                    type="button" href="/views/forgotpassword"><a
                                        href="/views/forgotpassword">I forget my
                                        password</a></button>
                            </div>
                        </form>

                        <div class="relative my-4">
                            <p
                                class="absolute text-gray-900 text-xs peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">
                                You do not have an account? <a class="underline font-bold" href="/api/sessions/signup">Sign up!</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>